@page
@model ZeroHunger.Pages.ProductInNeedList.CreateModel
@{
    ViewData["Title"] = "Create";

}

<br />
<h2 class="text-info">Create New Product</h2>
<br />



<div class="border container" style="padding:30px">
    <form method="Post" class="form-v10-content" enctype="multipart/form-data">
       
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>       
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="product.product_name">Product Name</label>
            </div>
            <div class="col-6">
                <input asp-for="product.product_name" class="form-control" required />
            </div>
            <span asp-validation-for="product.product_name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="product.product_description">Product Description</label>
            </div>
            <div class="col-6">
                <input asp-for="product.product_description" class="form-control" />
            </div>
            <span asp-validation-for="product.product_description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="product.amount">Amount</label>
            </div>
            <div class="col-6">
                <input asp-for="product.amount" min="1" class="form-control" required />
            </div>
            <span asp-validation-for="product.amount" class="text-danger"></span>
        </div>
        
        
        
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="product.image"></label>
            </div>
            <div class="col-6">
                <input asp-for="ImageFile" class="custom-file-input"  onchange="printFileName(this)" accept="image/*" >
                <label class="custom-file-label" id="imgupload">Upload File</label>
            </div>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        
        
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">
                    Back to List
                </a>
            </div>
        </div>
        </form>
</div>
        
<script>
    function printFileName(item){

        document.getElementById("imgupload").innerHTML=item.value.split("\\").pop();
    }

</script>
      
<div></div>

@section Scripts{ 
    <partial-name="_ValidationScriptsPartial"/>
    
    
}
