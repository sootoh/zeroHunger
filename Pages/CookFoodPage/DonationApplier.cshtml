@page
@model ZeroHunger.Pages.CookFoodPage.DonationApplierModel
@{
}
<br />
<div class="container row p-0 m-0">
    <div class="col-8">
        <h2>Cooked Food Donation</h2>
    </div>
    <div class="col-4">
        <a asp-page="CookFoodView" class="btn btn-info ">Back to List</a>
    </div>
  
            <div class="col-12 border p-3">
                <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>User Name</th>
                            <th>User Contact Number</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>

                    @if (Model.CR.Count != 0)
                    {
                        <form method="post">
                            @foreach (var item in Model.CR)
                            {
                        <tr>
                            <th>@item.date</th>
                            <th>@item.reservationRefUser.UserName</th>
                            <th>@item.reservationRefUser.UserPhone</th>
                            <th>@item.status</th>
                            <th>
                                @if (item.status.Equals("Confirmed")||item.status.Equals("Pending"))
                                { }
                                else
                                {<button class="btn btn-success" style="width:200px;text-align:left;" asp-route-id="@item.Id" asp-page-handler="Confirm"><i class="bi bi-check-square" style="margin:10px 10px 10px 10px;font:red;"></i>Confirm</button>}
                            </th>

                        </tr>
                        }
                            </form>
                        }
                        else
                        {
                            <td colspan="3">No reservation</td>
                        }

                </table>
            </div>
    </div>
   



  