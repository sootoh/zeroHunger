@page
@using ZeroHunger.Model
@model ZeroHunger.Pages.Deliveries.DeleteModel


<form method="post">
    <input hidden asp-for="Delivery.DeliveryID" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Delivery Request</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Delivery.DeliveryTime"></label>
            <input asp-for="Delivery.DeliveryTime" disabled class="form-control"/>
        </div>
         <div class="mb-3">
            <label asp-for="Delivery.DeliveryStatus"></label>
            <select disabled class="custom-select" asp-for="Delivery.DeliveryStatus" asp-items="Html.GetEnumSelectList<DeliveryStatus>()"></select>
         </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
