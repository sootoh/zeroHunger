<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZeroHunger</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/rcss.css" asp-append-version="true" />
    <script src="~/js/function.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">

            <div class="container">
                <img class="logo" src='../images/zerohungerlogo.jpeg' />
                <a class="navbar-brand" asp-area="" asp-page="/Index">Zero<span>Hunger</span></a>
                <button class="navbar-toggler collapsible" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav ml-auto content">

                        <a class="nav-link nav-item text-dark" asp-area="" asp-page="/Index">Home</a>
                        @*<a class="nav-link nav-item text-dark" asp-area="" asp-page="/admin">Admin</a>*@
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle text-dark" data-toggle="dropdown">Delivery</a>
                            <div class="dropdown-menu">
                                <a asp-page="/Deliveries/VolunteerDelivery" class="dropdown-item">Delivery</a>
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle text-dark" data-toggle="dropdown">Dry Food</a>
                            <div class="dropdown-menu">
                                <a href="/DryFoodDonationF/Index" class="dropdown-item">Donate Dry Food</a>
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle text-dark" data-toggle="dropdown">Cook Food</a>
                            <div class="dropdown-menu">
                                <a asp-page="/CookFoodPage/AddCookFood" class="dropdown-item">Donate Cook Food</a>
                                <a asp-page="/CookFood/Index" class="dropdown-item">Get Cook Food </a>
                                <a asp-page="/CookFood/Reservation" class="dropdown-item">Cook Food Reservation </a>
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle text-dark" data-toggle="dropdown">Admin</a>
                            <div class="dropdown-menu">
                                <a asp-page="/Deliveries/Index" class="dropdown-item">Delivery</a>
                                <a href="/ProductInNeedList/Index" class="dropdown-item">Product In Need</a>
                                
                                <a asp-page="/ReceiverAccountApplication/Index" class="dropdown-item">ReceiverAccountApplication</a>
                                <a asp-page="/UserPage/UserView" class="dropdown-item">User List</a>

                            </div>
                        </div>


                        <partial name="_LoginStatusPartial" />

                    </div>
                </div>


            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <footer class="border-top footer text-muted" style="padding-top=5px">
        <div class="container">
            &copy; 2021 - ZeroHunger - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/main.js"></script>
    <script>
        var coll = document.getElementsByClassName("collapsible");
        var i;

        for (i = 0; i < coll.length; i++) {
            coll[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var content = this.nextElementSibling;
                if (content.style.display === "block") {
                    content.style.display = "none";
                } else {
                    content.style.display = "block";
                }
            });
        }
    </script>


    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
