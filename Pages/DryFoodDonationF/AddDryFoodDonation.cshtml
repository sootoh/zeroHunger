@page
@model ZeroHunger.Pages.DryFoodDonationF.AddDryFoodDonationModel

<div class="page-content">
    <form method="Post" class="form-v10-content">
        @*<input asp-for="DFD.DonorId" class="'form-control'" type='hidden' value="Lalisa">*@
        <h2 class="text-info" style="text-align:center;margin:0px 10px 30px 10px;">Donate Dry Food</h2>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group row">



                <div class="col-4">
                    <label asp-for="DFD.DryFoodName">Dry Food Name</label>
                </div>
                <div class="col-6">
                    <input asp-for="DFD.DryFoodName" class="'form-control'" required>

                </div>

                <div class="col-4">
                    <label asp-for="DFD.DryFoodQuantity">Dry Food Quantity</label>
                </div>
                <div class="col-6">
                    <input asp-for="DFD.DryFoodQuantity" class="'form-control'" min="0" required>
                </div>
                <div class="col-4">
                    <label asp-for="DFD.DryFoodPickDate">Pick-up Date Available</label>
                </div>
                <div class="col-6">
                    <input type='date' asp-for="DFD.DryFoodPickDate" class="'form-control'" required>
                </div>
                <div class="col-4">
                    <label asp-for="DFD.DryFoodRemark">Remark</label>
                </div>
                <div class="col-6">
                    <textarea asp-for="DFD.DryFoodRemark" class="'form-control'"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-4">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />


                </div>
                <div class="col-5 offset-4">
                    <a asp-page="Index" class="btn btn-sucess form-control">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>
<div></div>
