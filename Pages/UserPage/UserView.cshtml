@page
@model ZeroHunger.Pages.UserPage.UserViewModel
@{
@if (@HttpContext.Request.Cookies["role"] != null && @HttpContext.Request.Cookies["role"].Equals("4"))
    {

<br />
<div class="container row p-0 m-0">
    <div class="col-8">
        <h2>User List</h2>
    </div>
    <div class="col-4">
        <a asp-page="CreateUser" class="btn btn-info "><i class="bi bi-pencil-square"></i> Create New User</a>
    </div>
    
    
    <div class="col-18 border p-3">

        <table id="user_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Password</th>                    
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Birthdate</th>
                    <th>Address 1</th>
                    <th>Address 2</th>
                    <th>Option</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<br /><br /><br /><br />
@section Scripts{
    <script src="~/js/userList.js"></script>
}

}else{
<script>
     alert("Sorry, you are not eligible to enter this page.");
     location.href = '/Index';
     </script>
}}
