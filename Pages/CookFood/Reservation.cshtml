    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Shop</th>
                    <th>Food</th>
                    <th>Status</th>
                </tr>
            </thead>

            @*@foreach (var item in Model.CR)
            {
                <tr>
                    <td>@item.date</td>
